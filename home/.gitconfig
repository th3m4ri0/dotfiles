[user]
    name = Erwan d'Orgeville
	email = info@erwandorgeville.com
[branch]
    autosetuprebase = never
[color]
    ui = 1
[core]
    excludesfile = ~/.gitignore_global
    editor = subl
[push]
    default = simple
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[http "https://git.bank.erwandorgeville.com"]
	sslCAInfo = /Users/ct/.flynn/ca-certs/default.pem
[credential "https://git.bank.erwandorgeville.com"]
	helper = /usr/local/bin/flynn git-credentials
